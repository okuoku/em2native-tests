plugins {
    id 'com.android.application'
}

android {
    namespace 'org.cltn.yfrm'
    ndkVersion "@YFRM_NDKVERSION@"
    compileSdk @YFRM_PLATFORMVERSION@
    externalNativeBuild {
        cmake {
            path file('../../../CMakeLists.txt')
            version '@YFRM_CMAKEVERSION@'
        }
    }

    defaultConfig {
        applicationId "@YFRM_PKGID@"
        minSdk 22
        targetSdk @YFRM_PLATFORMVERSION@
        versionCode 1
        versionName "1.0"

        externalNativeBuild {
            cmake {
                arguments "-DYFRM_WITH_PREBUILT_LIBS=1", "-DYFRM_BINARY_ROOT_GUESS=@YFRM_BINARY_ROOT_GUESS@", "-DTESTSLOT=@YFRM_SLOT@", "-DYFRM_GPULEVEL=@YFRM_GPULEVEL@", "-DYFRM_APPSYM=@YFRM_APPSYM@"
                targets "app-@YFRM_APPSYM@"
            }
        }

        ndk {
            abiFilters @YFRM_NDKABIFILTERS@
        }

        sourceSets {
            main {
                java {
                    srcDirs "../java",
                    @YFRM_PFJAVADIR@
                }
                manifest.srcFile "../AndroidManifest.xml"
                res {
                    srcDirs "../res"
                }
            }
        }
    }
    buildTypes {
        release {
            minifyEnabled false
            debuggable true
        }
        debug {
            minifyEnabled false
            debuggable true
        }
    }
    compileOptions {
        sourceCompatibility JavaVersion.VERSION_1_8
        targetCompatibility JavaVersion.VERSION_1_8
    }
}

dependencies {
}
